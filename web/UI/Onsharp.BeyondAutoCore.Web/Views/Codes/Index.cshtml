<script type="text/javascript">KTUtil.onDOMContentLoaded(function () { DragAndDrop.init(); });</script>
<script type="text/javascript">
    function changePageSize(chosen) {
        $.urlParam = function (name) {
            var results = new RegExp('[\?&]' + name + '=([^&#]*)')
                            .exec(window.location.search);
        
            return (results !== null) ? results[1] || 0 : false;
        }
        
        
        const pageParam = $.urlParam('page');
        const isGenericParam = $.urlParam('isGeneric');
        console.log("/codes" + "?isGeneric=" + ((isGenericParam === false) ? "false" : "true") + "&size=" + chosen + "&page=" + ((pageParam === false) ? "1" : pageParam));

        window.location = "/codes" + "?isGeneric=" + ((isGenericParam === false) ? "false" : "true") + "&size=" + chosen + "&page=" + ((pageParam === false) ? "1" : pageParam);
    }
</script>