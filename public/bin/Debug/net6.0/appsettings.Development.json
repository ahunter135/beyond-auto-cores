{
	"$schema": "./appsettings-schema.json",
	"Serilog": {
		"MinimumLevel": {
			"Default": "Information"
		},
		"WriteTo": [
			{
				"Name": "Async",
				"Args": {
					"configure": [
						{
							"Name": "Console"
						}
					]
				}
			}
		]
	},
	"Umbraco": {
		"CMS": {
			"Content": {
				"MacroErrors": "Throw"
			},
			"Hosting": {
				"Debug": true
			},
			"RuntimeMinification": {
				"UseInMemoryCache": false,
				"CacheBuster": "Timestamp"
			}
		}
	},
	"ConnectionStrings": {
		//"umbracoDbDSN": "Data Source=|DataDirectory|/BACUmbraco.sqlite.db;Cache=Shared;Foreign Keys=True;Pooling=True",
		//"umbracoDbDSN_ProviderName": "Microsoft.Data.Sqlite"
	}
}
