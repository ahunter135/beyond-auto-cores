                                                <input id="palladium" type="number" class="form-control form-control-solid" placeholder="" name="palladium" value="" />
                                            </div>
                                            <div class="col-md-4 fv-row">
                                                <label class="fs-6 fw-bold mb-2">Rhodium</label>
                                                <input id="rhodium" type="number" class="form-control form-control-solid" placeholder="" name="rhodium" value="" />
                                            </div>
                                        </div>
